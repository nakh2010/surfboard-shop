{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{% assign bg_style = section.settings.bg_style %}
{% assign background_color = section.settings.background_color %}
{% assign font_style = section.settings.font_color %}

<style>
  {% if bg_style == 'color' %}
    #section-50-{{ section.id }} .image-with-text-column{
      background-color: {{ background_color }};
    }
  {% elsif bg_style == 'transparent' %}
    #section-50-{{ section.id }} .image-with-text-column{
      background: transparent;
    }
  {% else %}
    #section-50-{{ section.id }} .image-with-text-column{
      position: relative;
    }
  {% endif %}
</style>

<div id="section-50-{{ section.id }}" class="Feature-Text-Image custom-50-50 bg_style_{{ bg_style }} font_style_{{ section.settings.font_color }}">
<div class="page-width">
  {% capture image_layout %}
    <div class="image-wr">
      {%- if section.settings.image != blank -%}
        <div class="desktop_img feature-media_image-wrapper image-with-text__media">          
              <img
                srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
                src="{{ section.settings.image | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image.alt | escape }}"
                loading="lazy"
              >
        </div>
      {%- endif -%}

      {%- if section.settings.image_tab != blank -%}
        <div class="tablet_img feature-media_image-wrapper image-with-text__media">          
              <img
                srcset="{%- if section.settings.image_tab.width >= 165 -%}{{ section.settings.image_tab | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 360 -%}{{ section.settings.image_tab | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 535 -%}{{ section.settings.image_tab | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 750 -%}{{ section.settings.image_tab | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 1070 -%}{{ section.settings.image_tab | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 1500 -%}{{ section.settings.image_tab | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image_tab | image_url }} {{ section.settings.image_tab.width }}w"
                src="{{ section.settings.image_tab | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image_tab.alt | escape }}"
                loading="lazy"
              >
        </div>
      {%- endif -%}

      {%- if section.settings.image_mob != blank -%}
        <div class="mob_img feature-media_image-wrapper image-with-text__media">          
              <img
                srcset="{%- if section.settings.image_mob.width >= 165 -%}{{ section.settings.image_mob | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 360 -%}{{ section.settings.image_mob | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 535 -%}{{ section.settings.image_mob | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 750 -%}{{ section.settings.image_mob | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 1070 -%}{{ section.settings.image_mob | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 1500 -%}{{ section.settings.image_mob | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image_mob | image_url }} {{ section.settings.image_mob.width }}w"
                src="{{ section.settings.image_mob | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image_mob.alt | escape }}"
                loading="lazy"
              >
        </div>
      {%- endif -%}
    </div>

   {% endcapture %}
   
  <div class="image-with-text-column isolate">
  {% if bg_style == 'image' %}
  <div class="background_img_wr">
       {%- if section.settings.image != blank -%}
              <img class="desk_bgr"
                srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
                src="{{ section.settings.image | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image.alt | escape }}"
                loading="lazy"
              >
      {%- endif -%}

      {%- if section.settings.image_tab != blank -%}
              <img class="tablet_bgr"
                srcset="{%- if section.settings.image_tab.width >= 165 -%}{{ section.settings.image_tab | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 360 -%}{{ section.settings.image_tab | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 535 -%}{{ section.settings.image_tab | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 750 -%}{{ section.settings.image_tab | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 1070 -%}{{ section.settings.image_tab | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image_tab.width >= 1500 -%}{{ section.settings.image_tab | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image_tab | image_url }} {{ section.settings.image_tab.width }}w"
                src="{{ section.settings.image_tab | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image_tab.alt | escape }}"
                loading="lazy"
              >
      {%- endif -%}

      {%- if section.settings.image_mob != blank -%}
              <img class="mobile_bgr"
                srcset="{%- if section.settings.image_mob.width >= 165 -%}{{ section.settings.image_mob | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 360 -%}{{ section.settings.image_mob | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 535 -%}{{ section.settings.image_mob | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 750 -%}{{ section.settings.image_mob | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 1070 -%}{{ section.settings.image_mob | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if section.settings.image_mob.width >= 1500 -%}{{ section.settings.image_mob | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ section.settings.image_mob | image_url }} {{ section.settings.image_mob.width }}w"
                src="{{ section.settings.image_mob | image_url: width: 1500 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image_mob.alt | escape }}"
                loading="lazy"
              >
      {%- endif -%}
  </div>
  {% endif %}
    <div class="wrapp_50-50">
      {% if section.settings.layout == 'right' %}
      {{ image_layout }}
      {% endif %}
      
    <div class="content-wr content-po-{{ section.settings.layout }}">
      <div id="ImageWithText---{{ section.id }}" class="image-with-text__content_positon">
        {%- for block in section.blocks -%}
             {% if block.settings.sub_heading != blank %}
              <h5 class="image-with-text__eyebrow font_color-section">
                {{ block.settings.sub_heading | escape }}
              </h5>
               {% endif %}
          {% if block.settings.heading != blank %}
              <h2 class="image-with-text__heading font_color-section">
                {{ block.settings.heading | escape }}
              </h2>
            {% endif %}
           {% if block.settings.text != blank %}
              <div class="image-with-text__text rte font_color-section">{{ block.settings.text }}</div>
              {% endif %}
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="label_btn custom-style-btn" >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
      {% if section.settings.layout == 'left' %}
      {{ image_layout }}
      {% endif %}
    </div>
  </div>
  </div>
</div>

{% schema %}
  {
  "name": "Image with text",
  "class": "shopify-section",
  "settings": [
    {
      "type": "header",
      "content": "General settings"
    },
    {
      "type": "select",
      "id": "bg_style",
      "label": "Background Style",
      "default": "color",
      "options": [
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "transparent",
          "label": "Transparent"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F5F5F5",
      "info": "Background color of background style is Color"
    },
    {
        "type": "select",
        "id": "font_color",
        "label": "Font Color",
        "default": "dark",
        "options": [
          {
            "value": "dark",
            "label": "Dark"
          },
          {
            "value": "light",
            "label": "Light"
            }
        ]
      },
      {
      "type": "select",
      "id": "layout",
      "label": "Content Position",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
          }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_tab",
      "label": "Image - Tablet"
    },
     {
      "type": "image_picker",
      "id": "image_mob",
      "label": "Image - Mobile"
    }
  ],
  "blocks": [
    {
    "type": "heading",
    "name":"Content",
    "limit": 1,
    "settings": [   
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub-heading"
      },      
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link URL"
      }
    ]
    }
    ],
    "presets": [
      {
        "name": "Image with text"
      }
    ]
 }
{% endschema %}

