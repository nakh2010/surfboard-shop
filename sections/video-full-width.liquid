
{{ 'component-video-fullwidth.css' | asset_url | stylesheet_tag }}

<div class="lsn-video-fullWidth text_style_{{ section.settings.text_style }}">
  <div class="video-section-large">
     {%- if section.settings.video_link != blank -%}
       <div class="video-section__media">
         <video class="lsn_video" width="100%" autoplay loop muted playsinline>
            <source src="{{ section.settings.video_link }}" type="video/mp4">
          </video>
       </div>
     {%- else -%}
      {%- if section.settings.video_url.type == 'youtube' -%}
        <div class="video-section__media">
          <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&loop=1&mute=1&playlist={{ section.settings.video_url.id }}" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.header | escape }}"></iframe>
        </div>
      {%- else -%}
        <div class="video-section__media">
          <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay=1&loop=1&color=ef0800&title=0&byline=0&portrait=0&muted=true" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.header | escape }}"></iframe>
        </div>
      {%- endif -%}
     {%- endif -%}
  </div>
    
  <div class="video_caption">
    {% if section.settings.sub_header != blank %}
      <div class="lsn-sub-with-line"><span class="lsn__eyebrow">{{ section.settings.sub_header }}</span></div>
    {% endif %}
    {% if section.settings.header != blank %}
      <h2 class="lsn__heading">{{ section.settings.header }}</h2>
    {% endif %}
    {% if section.settings.label != blank %}
      <a class="lsn_button_style" href="{{ section.settings.link }}">{{ section.settings.label }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Full width video",
    "class": "lsn-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "sub_header",
        "default": "Sub-heading",
        "label": "Sub-Header"
      },
      {
        "type": "text",
        "id": "header",
        "default": "Heading",
        "label": "Header"
      },
      {
        "type": "text",
        "id": "label",
        "default": "Button Label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "dark",
            "label": "Dark"
          }
        ],
        "default": "light",
        "label": "Text Style"
      },
      {
        "type": "text",
        "id": "video_link",
        "label": "Url",
        "info": "Video file type: .mp4"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "accept": [
          "youtube",
          "vimeo"
        ],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "Url",
        "placeholder": "t:sections.video.settings.video_url.placeholder",
        "info": "Accept youtube or vimeo"
      }
	],
    "presets": [
    {
      "name": "Full width video"
    }
    ]
  }
{% endschema %}

