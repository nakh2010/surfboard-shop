{% assign sub_header = section.settings.sub_header %}
{% assign header = section.settings.header %}

{{ 'component-symbols.css' | asset_url | stylesheet_tag }}

<div class="custom-symbols">
    <div class="page-width">
        <div class="cards_heading">
            {% if sub_header != blank %}
            <span class="sub_header">{{ sub_header }}</span>
            {% endif %}
            {% if header != blank %}
            <h2 class="header_cap">{{ header }}</h2>
            {% endif %}
        </div>
        <div class="cards_list">
            {% for block in section.blocks %}
            <div class="card_item">
                <span class="wr_img">
                    {%- if block.settings.image != blank -%}
                    <img
                        srcset="{{ block.settings.image | image_url: width: 200 }}"
                        src="{{ block.settings.image | image_url: width: 200 }}"
                        sizes="(min-width: {{ settings.page_width }}px) 200px, (min-width: 750px) 200, 200"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}"
                    >
                    {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                </span>
                {% if block.settings.text != blank %}
                <p>{{ block.settings.text }}</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Multi-column",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#005A87"
      },
      {
        "type": "color",
        "id": "font_color",
        "label": "Text Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "sub_header",
        "default": "Sub-heading",
        "label": "Sub-Header"
      },
      {
        "type": "text",
        "id": "header",
        "default": "Heading",
        "label": "Header"
      },
      {
        "type": "text",
        "id": "label",
        "default": "Button Label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      }
	],
  "blocks": [
      {
        "type": "item",
        "name": "item",
        "settings": [
     	 {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
         },
		 {
          "type": "text",
          "id": "title",
          "default": "Column heading",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        }
        ]
      }
    ],
    "presets": [
    {
      "name": "Multi-column"
    }
    ]
  }
{% endschema %}

