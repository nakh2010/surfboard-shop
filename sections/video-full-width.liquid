
{% assign sub_header = section.settings.sub_header %}
{% assign header = section.settings.header %}
{% assign label = section.settings.label %}
{% assign link = section.settings.link %}
{% assign text_style = section.settings.text_style %}

{{ 'component-full-width-video.css' | asset_url | stylesheet_tag }}

<div class="lsn-video-fullWidth full_width_video text_style_{{ text_style }}">
    <div class="video-section__media">
        {%- if section.settings.video_url.type == 'youtube' -%}
          <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1&loop=1&autoplay=1&mute=1&controls=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.description | escape }}"></iframe>
        {%- else -%}
          <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.description | escape }}"></iframe>
        {%- endif -%}
    </div>
    <div class="video_caption">
      {% if sub_header != blank %}
      <span>{{ sub_header }}</span>
      {% endif %}
      {% if header != blank %}
      <h2 class="header_cap">{{ header }}</h2>
      {% endif %}
      {% if label != blank %}
      <a class="label_btn custom-style-btn" href="{{ link }}">{{ label }}</a>
      {% endif %}
    </div>
</div>

{% schema %}
  {
    "name": "Full width video",
    "class": "lsn-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "sub_header",
        "default": "Sub-heading",
        "label": "Sub-Header"
      },
      {
        "type": "text",
        "id": "header",
        "default": "Heading",
        "label": "Header"
      },
      {
        "type": "text",
        "id": "label",
        "default": "Button Label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "dark",
            "label": "Dark"
          }
        ],
        "default": "light",
        "label": "Text Style"
      },
      {
          "type": "header",
          "content": "Video"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "accept": [
          "youtube",
          "vimeo"
        ],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "Video Url - Desktop",
        "placeholder": "t:sections.video.settings.video_url.placeholder",
        "info": "t:sections.video.settings.video_url.info"
      },
      {
        "type": "video_url",
        "id": "video_url_tablet",
        "accept": [
          "youtube",
          "vimeo"
        ],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "Video Url - Tablet",
        "placeholder": "t:sections.video.settings.video_url.placeholder",
        "info": "t:sections.video.settings.video_url.info"
      },
      {
        "type": "video_url",
        "id": "video_url_mobile",
        "accept": [
          "youtube",
          "vimeo"
        ],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "Video Url - Mobile",
        "placeholder": "t:sections.video.settings.video_url.placeholder",
        "info": "t:sections.video.settings.video_url.info"
      }
	],
    "presets": [
    {
      "category": "Custom",
      "name": "Full width video"
    }
    ]
  }
{% endschema %}

