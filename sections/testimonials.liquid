{% assign bg_style = section.settings.bg_style %}
{% assign bg_color = section.settings.bg_color %}

{% assign text_color = section.settings.text_color %}

{{ 'testimonials.js' | asset_url | script_tag }}
{{ 'component-testimonials.css' | asset_url | stylesheet_tag }}

{% style %}
    {% if bg_style == 'color' %}
    #section-testimonials-{{ section.id }} .wrapper_testimonials{
      background-color: {{ bg_color }};
      border-radius: 20px;
      overflow: hidden;
    }
    #section-testimonials-{{ section.id }} .wrapper_testimonials *{
      color: {{ text_color }};
    }
    {% else %}
      #section-testimonials-{{ section.id }} .wrapper_testimonials{
        background: transparent;
        color: {{ text_color }};
    }
    {% endif %}
{% endstyle %}
<div id="section-testimonials-{{ section.id }}" class="lsn_block-testimonials bg_style_{{ bg_style }}">
    <div class="page-width">
      <div class="wrapper_testimonials">
        <div class="testimonials">
         {%- for block in section.blocks -%}
            <div class="sum_testimonials">
                {% if block.settings.heading != blank %}
                <span>{{ block.settings.heading }}</span>
                {% endif %}
                {% if block.settings.testimonials != blank %}
                <div>{{ block.settings.testimonials }}</div>
                {% endif %}
                {% if block.settings.label != blank %}
                <a class="label_btn lsn_button_style" href="{{ block.settings.link }}">{{ block.settings.label }}</a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
      </div>
    </div>
</div>
{% schema %}
  {
    "name": "Testimonials",
    "class": "lsn-section",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Background section"
      },
      {
        "type": "select",
        "id": "bg_style",
        "label": "Background Style",
        "default": "color",
        "options": [
          {
            "value": "color",
            "label": "Color"
          },
        {
        "value": "transparent",
        "label": "Transparent"
        }
        ]
      },
      {
        "type": "color",
        "id": "bg_color",
        "default": "#FFFFFF",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "default": "#000000",
        "label": "Text Color"
      }
    ],
    "blocks": [
      {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "testimonials",
        "label": "Content"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      }
      ]
      }
      ],
    "presets": [
    {
      "name": "Testimonials"
    }
    ]
  }
{% endschema %}
