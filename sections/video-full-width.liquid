
{% assign sub_header = section.settings.sub_header %}
{% assign header = section.settings.header %}
{% assign label = section.settings.label %}
{% assign link = section.settings.link %}
{% assign text_style = section.settings.text_style %}

{{ 'component-full-width-video.css' | asset_url | stylesheet_tag }}

<div class="lsn-video-fullWidth full_width_video text_style_{{ text_style }}">
    <div class="video-section__media">
        <video class="custom_video desk_vd" width="100%" autoplay loop muted playsinline>
           <source type="video/youtube" src="https://www.youtube.com/watch?v=_9VUPq3SxOc" />
        </video>
        <video class="custom_video tablet_vd" width="100%" autoplay loop muted playsinline>
            <source src="{{ section.settings.video_2 }}" type="video/mp4">
        </video>
        <video class="custom_video mobile_vd" width="100%" autoplay loop muted playsinline>
            <source src="{{ section.settings.video_3 }}" type="video/mp4">
        </video>
    </div>
    <div class="video_caption">
      {% if sub_header != blank %}
      <span>{{ sub_header }}</span>
      {% endif %}
      {% if header != blank %}
      <h2 class="header_cap">{{ header }}</h2>
      {% endif %}
      {% if label != blank %}
      <a class="label_btn custom-style-btn" href="{{ link }}">{{ label }}</a>
      {% endif %}
    </div>
</div>

{% schema %}
  {
    "name": "Full width video",
    "class": "lsn-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "sub_header",
        "default": "Sub-heading",
        "label": "Sub-Header"
      },
      {
        "type": "text",
        "id": "header",
        "default": "Heading",
        "label": "Header"
      },
      {
        "type": "text",
        "id": "label",
        "default": "Button Label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button URL"
      },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "dark",
            "label": "Dark"
          }
        ],
        "default": "light",
        "label": "Text Style"
      },
      {
          "type": "header",
          "content": "Video - Desktop"
      },
      {
          "type": "text",
          "id": "video_1",
          "label": "video URL"
        },
      {
          "type": "header",
          "content": "Video - Tablet"
      },
      {
          "type": "text",
          "id": "video_2",
          "label": "video URL"
        },
      {
          "type": "header",
          "content": "Video - Mobile"
      },
      {
        "type": "text",
        "id": "video_3",
        "label": "video URL"
      }
	],
    "presets": [
    {
      "category": "Custom",
      "name": "Full width video"
    }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

